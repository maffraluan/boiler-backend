{
	"name": "boiler-backend",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start:build": "yarn build && pm2 start dist/app.js",
		"build": "tsc -p tsconfig.json",
		"dev": "ts-node-dev --transpile-only src/app.ts",
		"test": "jest --colors --coverage a",
		"prepare": "if [ -d .git ]; then chmod ug+x .git/hooks/pre-push; fi",
		"reload:pm2": "pm2 reload all",
		"prisma:generate": "prisma generate",
		"docker:build": "docker-compose build --no-cache",
		"docker:up": "docker-compose up -d --build",
		"docker:logs": "docker-compose logs -f",
		"docker:down": "docker-compose down --remove-orphans",
		"docker:restart": "docker-compose restart",
		"docker:debug": "docker-compose --verbose up",
		"docker:clean": "docker-compose down --volumes --remove-orphans",
		"docker:rebuild": "yarn docker:clean && yarn docker:build && yarn docker:up"
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"devDependencies": {
		"@types/amqplib": "^0.10.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/joi": "^17.2.2",
		"@types/node": "^22.10.10",
		"@types/supertest": "^6.0.2",
		"@types/swagger-ui-express": "^4.1.7",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"jest": "^29.7.0",
		"performance-now": "^2.1.0",
		"prettier": "^3.4.2",
		"prisma": "^6.2.1",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"tsc": "^2.0.4",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@prisma/client": "^6.2.1",
		"amqplib": "^0.10.3",
		"axios": "^1.7.9",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
